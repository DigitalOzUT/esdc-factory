<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
	<service name='application/main-stop' type='service' version='0'>

		<create_default_instance enabled='true'/>
		<single_instance/>

		<exec_method name='start' type='method' exec=':true' timeout_seconds='0'/>
		<exec_method name='stop' type='method' exec='/usr/local/bin/main.sh stop' timeout_seconds='0'/>

		<property_group name='startd' type='framework'>
			<propval name='duration' type='astring' value='transient'/>
			<propval name='ignore_error' type='astring' value='core,signal'/>
		</property_group>

		<stability value='Evolving'/>

		<template>
			<common_name>
				<loctext xml:lang='C'>Main application stopper</loctext>
			</common_name>
		</template>
	</service>
</service_bundle>
